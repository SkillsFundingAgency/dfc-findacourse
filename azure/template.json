{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environmentName": {
      "type": "string",
      "metadata": {
        "description": "Short name of the environment. Used for the name of resources created"
      }
    },
    "appServicePlanName": {
      "type": "string",
      "metadata": {
        "description": "App service plan to run the app under"
      }
    },
    "appServicePlanResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Resource group the app service plan is in"
      }
    }
  },
  "variables": {
    "deploymentUrlBase": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/",
    "storageAccountName": "[concat('dfc',toLower(parameters('environmentName')),'facostr')]",
    "appServiceName": "[concat('dfc-',toLower(parameters('environmentName')),'-findacourse-web')]"
  },
  "resources": [
    {
      "apiVersion": "2017-05-10",
      "name": "primaryStorageAccount",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'storage-account-arm.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "storageAccountName": {
            "value": "[variables('storageAccountName')]"
          },
          "accountType": {
            "value": "Standard_GRS"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "primaryAppService",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "primaryStorageAccount"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'app-service.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appServiceName": {
            "value": "[variables('appServiceName')]"
          },
          "appServicePlanName": {
            "value": "[parameters('appServicePlanName')]"
          },
          "appServicePlanResourceGroup": {
            "value": "[parameters('appServicePlanResourceGroup')]"
          },
          "deployStagingSlot": {
            "value": true
          },
          "appServiceAppSettings": {
            "value": [
              {
                "name": "Storage_AccountName",
                "value": "[variables('storageAccountName')]"
              },
              {
                "name": "Storage_AccountKey",
                "value": "tbc"
              },
              {
                "name": "Storage_ContainerReference",
                "value": "ncs_findacourse_config"
              },
              {
                "name": "Storage_SynonymsFilename",
                "value": "tsenu.xml"
              },
              {
                "name": "Storage_QualSettingsFilename",
                "value": "qualsettings.json"
              },
              {
                "name": "App_SynonymFileName",
                "value": "tsenu.xml"
              },
              {
                "name": "App_SynonymFilePath",
                "value": "Data"
              },
              {
                "name": "App_SettingsFilePath",
                "value": "Data"
              },
              {
                "name": "App_TempSynonymFilePath",
                "value": "Data\\Temp"
              },
              {
                "name": "App_TempSettingsFilePath",
                "value": "Data\\Temp"
              }
            ]
          }
        }
      }
    }
  ],
  "outputs": {
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    },
    "storageConnectionString": {
      "type": "string",
      "value": "[reference('primaryStorageAccount').outputs.storageConnectionString.value]"
    },
    "appServiceName": {
      "type": "string",
      "value": "[variables('appServiceName')]"
    }
  }
}