@using Dfc.FindACourse.Common;
@using Dfc.FindACourse.Web.HtmlHelpers;
@using Dfc.FindACourse.Web.ViewModels.CourseDirectory;
@model Dfc.FindACourse.Web.ViewModels.CourseDirectory.CourseSearchResultViewModel;

@{
    ViewData["Title"] = "CourseSearchResult";
}

<h2>CourseSearchResult</h2>

@if (Model.NoOfPages > 0)
{
    <b>pages @Model.NoOfPages</b>
    <b>Records @Model.NoOfRecords</b>
}

@foreach(var item in Model.Items )
{
    <div class="panel">
        <div>
            AttendanceMode: @item.AttendanceMode @item.CourseTitle @item.AttendencePattern @item.Distance, @item.Duration @item.Location @item.ProviderName

            @item.QualificationLevel @item.StartDate @item.StudyMode 
        </div>
    </div>
}
