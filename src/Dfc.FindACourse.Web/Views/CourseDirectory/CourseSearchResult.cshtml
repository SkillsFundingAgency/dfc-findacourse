@using Dfc.FindACourse.Common;
@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Http.Extensions;
@using Dfc.FindACourse.Web.HtmlHelpers;
@using Dfc.FindACourse.Web.ViewModels.CourseDirectory;
@using System.Web;
@model Dfc.FindACourse.Web.ViewModels.CourseDirectory.CourseSearchResultViewModel;

@{
    ViewData["Title"] = "CourseSearchResult";
}

<form id="FindACourseForm"
      name="FindACourseForm"
      class="form-result-page"
      method="get"
      asp-controller="CourseDirectory"
      asp-action="CourseSearchResult">
    <div class="grid-row">
        <div class="column-full">
            <h1 class="heading-xlarge visuallyhidden">Search results for</h1>
        </div>
    </div>
    <div class="grid-row">
        <div class="column-one-third">
            <div class="grid-row">
                <div class="column-full">
                    @{
                        var inputValidationErrorCssClass = (Model.LocationHasError) ? "input-validation-error" : string.Empty;
                        var formGroupErrorCssClass = (Model.LocationHasError) ? "error" : string.Empty;
                    }

                    <div class="form-group">
                        @if (Model.LocationHasError)
                        {
                            <span asp-validation-for="Location" class="field-validation-error">@Model.LocationError</span>
                        }
                        else
                        {
                            <span asp-validation-for="Location"></span>
                        }

                        <input asp-for="Location"
                               class="postcode-search @inputValidationErrorCssClass"
                               placeholder="Postcode"
                               autocomplete="off"
                               type="text"
                               value="@Model.Location" />
                        <input class="button" type="submit" id="Search" name="Search" value="Search">
                    </div>
                </div>
            </div>
            <div class="grid-row">
                <div class="column-full">
                    <div class="accordion" id="LocationRadiusFilter">
                        <div class="accordion-header">
                            <div class="accordion-heading">Distance</div>
                            <span class="accordion-header-icon"></span>
                        </div>
                        <div class="accordion-panel">
                            <div class="form-group">
                                <ul>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="radio" name="LocationRadius" id="LocationRadius1Mile" value="1" />
                                            <label for="LocationRadius1Mile">1 mile</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="radio" name="LocationRadius" id="LocationRadius3Miles" value="3" />
                                            <label for="LocationRadius3Miles">3 miles</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="radio" name="LocationRadius" id="LocationRadius5Miles" value="5" />
                                            <label for="LocationRadius5Miles">5 miles</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="radio" name="LocationRadius" id="LocationRadius10Miles" value="10" />
                                            <label for="LocationRadius10Miles">10 miles</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="radio" name="LocationRadius" id="LocationRadius15Miles" value="15" />
                                            <label for="LocationRadius15Miles">15 miles</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="radio" name="LocationRadius" id="LocationRadius20Miles" value="20" />
                                            <label for="LocationRadius20Miles">20 miles</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="radio" name="LocationRadius" id="LocationRadiusNational" value="1000" />
                                            <label for="LocationRadiusNational">National</label>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="accordion" id="StudyModeFilter">
                        <div class="accordion-header">
                            <div class="accordion-heading">Full-time or part-time</div>
                            <div class="accordion-subheading">8 selected</div>
                            <span class="accordion-header-icon"></span>
                        </div>
                        <div class="accordion-panel">
                            <div class="form-group">
                                <ul>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="StudyModeAll" id="StudyModeAll" value="all" />
                                            <label for="StudyModeAll">Show all</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="StudyModeFullTime" id="StudyModeFullTime" value="1" />
                                            <label for="StudyModeFullTime">Full Time</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="StudyModePartTime" id="StudyModePartTime" value="2" />
                                            <label for="StudyModePartTime">Part Time</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="StudyModeFlexible" id="StudyModeFlexible" value="4" />
                                            <label for="StudyModeFlexible">Flexible</label>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="accordion" id="AttendanceModeFilter">
                        <div class="accordion-header">
                            <div class="accordion-heading">Classroom or online</div>
                            <div class="accordion-subheading">8 selected</div>
                            <span class="accordion-header-icon"></span>
                        </div>
                        <div class="accordion-panel">
                            <div class="form-group">
                                <ul>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="AttendanceModeAll" id="AttendanceModeAll" value="all" />
                                            <label for="AttendanceModeAll">Show all</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="AttendanceModeClassroom" id="AttendanceModeClassroom" value="Classroom" />
                                            <label for="AttendanceModeClassroom">Classroom</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="AttendanceModeWorkbased" id="AttendanceModeWorkbased" value="Workbased" />
                                            <label for="AttendanceModeWorkbased">Workbased</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="AttendanceModeOnlineDistanceLearning" id="AttendanceModeOnlineDistanceLearning" value="OnlineDistanceLearning" />
                                            <label for="AttendanceModeOnlineDistanceLearning">Online/Distance learning</label>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="accordion" id="AttendancePatternFilter">
                        <div class="accordion-header">
                            <div class="accordion-heading">Day, night or weekend</div>
                            <div class="accordion-subheading">888 selected</div>
                            <span class="accordion-header-icon"></span>
                        </div>
                        <div class="accordion-panel">
                            <div class="form-group">
                                <ul>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="AttendancePatternAll" id="AttendancePatternAll" value="all" />
                                            <label for="AttendancePatternAll">Show all</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="AttendancePatternNormal" id="AttendancePatternNormal" value="Normal" />
                                            <label for="AttendancePatternNormal">Normal working hours</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="AttendancePatternDayBlock" id="AttendancePatternDayBlock" value="DayBlock" />
                                            <label for="AttendancePatternDayBlock">Day release/Block release</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="AttendancePatternEveningWeekend" id="AttendancePatternEveningWeekend" value="EveningWeekend" />
                                            <label for="AttendancePatternEveningWeekend">Evening/Weekend</label>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="accordion" id="QualificationLevelFilter">
                        <div class="accordion-header">
                            <div class="accordion-heading">Qualification level</div>
                            <a href="https://www.gov.uk/what-different-qualification-levels-mean/list-of-qualification-levels"> What qualification levels mean</a>
                            <div class="accordion-subheading">888 selected</div>
                            <span class="accordion-header-icon"></span>
                        </div>
                        <div class="accordion-panel">
                            <div class="form-group">
                                <ul>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="QualificationLevelAll" id="AttendancePatternAll" value="all" />
                                            <label for="QualificationLevelAll">All</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="QualificationLevelEntryLevel" id="AttendancePatternEntryLevel" value="EntryLevel" />
                                            <label for="QualificationLevelEntryLevel">Entry level</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="QualificationLevelLevel1" id="QualificationLevelLevel1" value="Level1" />
                                            <label for="QualificationLevelLevel1">Level 1</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="QualificationLevelLevel2" id="QualificationLevelLevel2" value="Level2" />
                                            <label for="QualificationLevelLevel2">Level 2</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="QualificationLevelLevel3" id="QualificationLevelLevel3" value="Level3" />
                                            <label for="QualificationLevelLevel3">Level 3</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="QualificationLevelLevel4" id="QualificationLevelLevel4" value="Level4" />
                                            <label for="QualificationLevelLevel4">Level 4</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="QualificationLevelLevel5" id="QualificationLevelLevel5" value="Level5" />
                                            <label for="QualificationLevelLevel5">Level 5</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="QualificationLevelLevel6" id="QualificationLevelLevel6" value="Level6" />
                                            <label for="QualificationLevelLevel6">Level 6</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="QualificationLevelLevel7" id="QualificationLevelLevel7" value="Level7" />
                                            <label for="QualificationLevelLevel7">Level 7</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="checkbox" name="QualificationLevelLevel8" id="QualificationLevelLevel8" value="Level8" />
                                            <label for="QualificationLevelLevel8">Level 8</label>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="accordion" id="Dfe1619FundedFilter">
                        <div class="accordion-header">
                            <div class="accordion-heading">Age suitability</div>
                            <span class="accordion-header-icon"></span>
                        </div>
                        <div class="accordion-panel">
                            <div class="form-group">
                                <ul>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="radio" name="Dfe1619Funded" id="Dfe1619FundedAll" value="all" />
                                            <label for="Dfe1619FundedAll">All ages</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="radio" name="Dfe1619Funded" id="Dfe1619Funded16To19" value="16To19" />
                                            <label for="Dfe1619Funded16To19">16 to 19 year-olds</label>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="multiple-choice">
                                            <input type="radio" name="Dfe1619Funded" id="Dfe1619Funded19plus" value="19plus" />
                                            <label for="Dfe1619Funded19plus">19+ year-olds</label>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <a href="#">Clear all filters</a>
                </div>
            </div>
        </div>
        <div class="column-two-thirds">
            <div class="grid-row">
                <div class="column-full">
                    <div class="form-group">
                        <div class="auto-complete-container">
                            <span asp-validation-for="SubjectKeyword"></span>
                            <input asp-for="SubjectKeyword"
                                   class="form-control form-control-1-1"
                                   autocomplete="off"
                                   placeholder="Enter a course name or subject" />
                            <ul id="course-list"></ul>
                            <input class="button" type="submit" id="Search" name="Search" value="Search" />
                        </div>
                    </div>
                    <div class="download-link">
                        <a href="#">Print or download these search results</a>
                    </div>
                    <div class="showing-container">
                        Showing @Model.ShowingFrom() - @Model.ShowingTo() of @Model.NoOfRecords results
                    </div>
                    <div class="pagination-container">
                        @if (Model.Items.Any() && Model.NoOfPages > 1)
                        {
                            <dfc-pagination dfc-pagination-no-of-pages="@Model.NoOfPages"
                                            dfc-pagination-url="@Context.Request.GetDisplayUrl()"
                                            dfc-pagination-param-name="@nameof(Model.PageNo)"
                                            dfc-pagination-display-no-of-pages="5"
                                            class="pagination page-top"></dfc-pagination>
                        }
                    </div>
                    <div class="form-group margin-bottom-0 form-spacer">
                        <label class="form-label inline" for="SortBy">Sort by:</label>
                        <dfc-select id="SortBy"
                                    name="SortBy"
                                    class="form-control form-control-1-4"
                                    dfc-items="Html.GetEnumSelectList<SortBy>()">
                        </dfc-select>
                    </div>
                    <hr class="bold-line" />
                </div>
            </div>
            <div class="grid-row">
                <div class="column-full">
                    @if (Model.Items.Any())
                    {
                        <div class="search-results">
                            @foreach (var item in Model.Items)
                            {
                                <div class="search-result-item">
                                    <h3>
                                        <a asp-action="CourseDetails" asp-route-id="@item.Id" asp-route-distance="@item.Distance">@item.CourseTitle</a>
                                    </h3>
                                    <div class="result-item-qualification-level">@item.QualificationLevel.GetDisplayName()</div>
                                    <ul class="result-item-course-attendence-study-mode-info">
                                        @if (item.IsDisplayable(item.StudyMode))
                                        {
                                            <li>@item.StudyMode.GetDisplayName()</li>
                                        }

                                        @if (item.IsDisplayable(item.AttendanceMode) && item.IsDisplayable(item.StudyMode))
                                        {
                                            <li> | @item.AttendanceMode.GetDisplayName() </li>
                                        }
                                        else if (item.IsDisplayable(item.AttendanceMode))
                                        {
                                            <li>@item.AttendanceMode.GetDisplayName()</li>
                                        }

                                        @if (item.IsDisplayable(item.AttendencePattern) && (item.IsDisplayable(item.AttendanceMode) || item.IsDisplayable(item.StudyMode)))
                                        {
                                            <li> | @item.AttendencePattern.GetDisplayName() </li>
                                        }
                                        else if (item.IsDisplayable(item.AttendencePattern))
                                        {
                                            <li>@item.AttendencePattern.GetDisplayName()</li>
                                        }
                                    </ul>
                                    <ul class="result-item-course-info">
                                        <li>
                                            <span class="label">Provider:</span>
                                            <span class="value">@item.ProviderName</span>
                                        </li>
                                        <li>
                                            <span class="label">Location:</span>
                                            <span class="value">@item.Location</span>
                                        </li>
                                        @if (!string.IsNullOrWhiteSpace(Model.Location))
                                        {
                                            <li>
                                                <span class="label">Distance:</span>
                                                <span class="value">@item.Distance miles</span>
                                            </li>
                                        }
                                        <li>
                                            <span class="label">Start date:</span>
                                            <span class="value">@item.StartDate</span>
                                        </li>
                                        <li>
                                            <span class="label">Duration:</span>
                                            <span class="value">@item.Duration</span>
                                        </li>
                                    </ul>
                                </div>
                            }
                        </div>

                        if (Model.Items.Any() && Model.NoOfPages > 1)
                        {
                            <dfc-pagination dfc-pagination-no-of-pages="@Model.NoOfPages"
                                            dfc-pagination-url="@Context.Request.GetDisplayUrl()"
                                            dfc-pagination-param-name="@nameof(Model.PageNo)"
                                            dfc-pagination-display-no-of-pages="10"
                                            class="pagination page-bottom"></dfc-pagination>
                        }
                    }
                    else
                    {
                        <p>There are no courses matching that name. Make sure that you've spelled it correctly, or use a broader description of the course.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</form>

